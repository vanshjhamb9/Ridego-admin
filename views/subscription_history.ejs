<!DOCTYPE html>
<html lang="en">
  
<head>
  <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <div class="page-body">
      <div class="container-fluid">
        <div class="page-title">
          <div class="row">
            <div class="col-sm-6">
                <h3>Subscription History</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Dashboard</li>
                    <li class="breadcrumb-item active">Subscription History</li>
                </ol>
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <!-- Filters -->
                        <form method="GET" action="/subscription/history" class="mb-3">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label>Driver:</label>
                                    <select class="form-control" name="driver_id">
                                        <option value="">All Drivers</option>
                                        <% drivers.forEach((driver) => { %>
                                            <option value="<%= driver.id %>" <%= driver_id == driver.id ? 'selected' : '' %>>
                                                <%= driver.first_name %> <%= driver.last_name %> (<%= driver.email %>)
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label>Status:</label>
                                    <select class="form-control" name="status_filter">
                                        <option value="all" <%= status_filter === 'all' ? 'selected' : '' %>>All</option>
                                        <option value="active" <%= status_filter === 'active' ? 'selected' : '' %>>Active</option>
                                        <option value="expired" <%= status_filter === 'expired' ? 'selected' : '' %>>Expired</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label>From Date:</label>
                                    <input type="date" class="form-control" name="date_from" value="<%= date_from %>">
                                </div>
                                <div class="col-md-2">
                                    <label>To Date:</label>
                                    <input type="date" class="form-control" name="date_to" value="<%= date_to %>">
                                </div>
                                <div class="col-md-3">
                                    <label>&nbsp;</label><br>
                                    <button type="submit" class="btn btn-primary">Filter</button>
                                    <a href="/subscription/history" class="btn btn-secondary">Reset</a>
                                </div>
                            </div>
                        </form>
                        
                        <div class="table-responsive theme-scrollbar">
                            <table class="display" id="basic-1">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Driver</th>
                                        <th>Plan Name</th>
                                        <th>Price</th>
                                        <th>Validity Days</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Status</th>
                                        <th>Created At</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var i = 1 %>
                                    <% history.forEach((data) => { %>
                                        <tr>
                                            <td><%= i %></td>
                                            <td><%= data.first_name %> <%= data.last_name %><br><small><%= data.email %></small></td>
                                            <td><%= data.plan_name || 'N/A' %></td>
                                            <td><%= general.site_currency || 'â‚¹' %> <%= data.price %></td>
                                            <td><%= data.validity_days %> days</td>
                                            <td><%= data.start_date ? new Date(data.start_date).toLocaleDateString() : '-' %></td>
                                            <td><%= data.end_date ? new Date(data.end_date).toLocaleDateString() : '-' %></td>
                                            <td>
                                                <% if (data.status === 'active') { %>
                                                    <span class="badge badge-success">Active</span>
                                                <% } else { %>
                                                    <span class="badge badge-danger">Expired</span>
                                                <% } %>
                                            </td>
                                            <td><%= data.created_at ? new Date(data.created_at).toLocaleDateString() : '-' %></td>
                                        </tr>
                                    <% i++ %>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer'); -%>
    <%- include('./partials/script'); -%>
</body>
</html>






